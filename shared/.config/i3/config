set $molokai_purple #AE81FF

# Mod4 = Windows Key
set $mod Mod4
# Mod1 = Alt
set $alt Mod1

focus_follows_mouse no

mode "resize" {
  bindsym j resize shrink height 10 px or 10 ppt
  bindsym k resize grow height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt
  bindsym h resize shrink width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# start a terminal
bindsym $mod+Return $terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+g split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# switch to workspace
bindsym $mod+1 exec "i3-msg 'workspace $workspace1a; move workspace to output $mon1'"
bindsym $mod+2 exec "i3-msg 'workspace $workspace2a; move workspace to output $mon1'"
bindsym $mod+3 exec "i3-msg 'workspace $workspace3a; move workspace to output $mon1'"
bindsym $mod+4 exec "i3-msg 'workspace $workspace4a; move workspace to output $mon1'"
bindsym $mod+5 exec "i3-msg 'workspace $workspace5a; move workspace to output $mon1'"
bindsym $mod+6 exec "i3-msg 'workspace $workspace6a; move workspace to output $mon1'"
bindsym $mod+7 exec "i3-msg 'workspace $workspace7a; move workspace to output $mon1'"
bindsym $mod+8 exec "i3-msg 'workspace $workspace8a; move workspace to output $mon1'"
bindsym $mod+9 exec "i3-msg 'workspace $workspace9a; move workspace to output $mon1'"
bindsym $mod+0 exec "i3-msg 'workspace $workspace0a; move workspace to output $mon1'"

bindsym $mod+$alt+1 exec "i3-msg 'workspace $workspace1b; move workspace to output $mon2'"
bindsym $mod+$alt+2 exec "i3-msg 'workspace $workspace2b; move workspace to output $mon2'"
bindsym $mod+$alt+3 exec "i3-msg 'workspace $workspace3b; move workspace to output $mon2'"
bindsym $mod+$alt+4 exec "i3-msg 'workspace $workspace4b; move workspace to output $mon2'"
bindsym $mod+$alt+5 exec "i3-msg 'workspace $workspace5b; move workspace to output $mon2'"
bindsym $mod+$alt+6 exec "i3-msg 'workspace $workspace6b; move workspace to output $mon2'"
bindsym $mod+$alt+7 exec "i3-msg 'workspace $workspace7b; move workspace to output $mon2'"
bindsym $mod+$alt+8 exec "i3-msg 'workspace $workspace8b; move workspace to output $mon2'"
bindsym $mod+$alt+9 exec "i3-msg 'workspace $workspace9b; move workspace to output $mon2'"
bindsym $mod+$alt+0 exec "i3-msg 'workspace $workspace0b; move workspace to output $mon2'"

